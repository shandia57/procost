{% extends 'layout/base.html.twig' %}

{% block title %} Employés - PROCOST {% endblock %}

{% block body %}

<main class="app-content">


    {{include('layout/template/_banner_name_page.html.twig', {'name_page' : "Employés"})}}



    <div class="tile pb-5">
        <a href={{path('employees_create')}} class="btn btn-primary float-right mb-4"><i
                class="fa fa-plus-circle mr-2"></i>Ajouter un
            employé</a>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Métier</th>
                        <th>Coût journalier</th>
                        <th>Date d'embauche</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for employee in employees %}
                    <tr>
                        <td>{{employee.firstname|capitalize}} {{employee.lastname|upper}}</td>
                        <td>{{employee.email}}</td>
                        <td>{{employee.job.name}}</td>
                        <td>{{employee.cost}}</td>
                        <td>{{employee.startedJob|date("d/m/Y", false)}}</td>
                        <td>
                            <a href={{path('employees_details', {'id': employee.id, 'page': 0})}}
                                class="btn btn-primary btn-sm">
                                <i class="fa fa-eye mr-0"></i>
                            </a>
                            <a href={{path('employees_update', {'id': employee.id})}} class="btn btn-info btn-sm">
                                <i class="fa fa-pencil mr-0"></i>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <hr />
        <nav class="float-right">
            {{include('layout/template/_pagination.html.twig', 
                {
                    'path' : "employees"
                }
            )}}
        </nav>
    </div>
</main>



{% endblock %}

{% block javascript %}

{% endblock %}