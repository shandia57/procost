{% extends 'layout/base.html.twig' %}

{% block title %} Modification d'un employé - PROCOST{% endblock %}

{% block body %}


<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-users"></i>&nbsp;Modification d'un employé</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">
                <a href="#"><i class="fa fa-home fa-lg"></i></a>
            </li>
            <li class="breadcrumb-item">
                <a href={{path('employees')}}>Employés</a>
            </li>
            <li class="breadcrumb-item">Modification d'un employé</li>
        </ul>
    </div>
    <div class="tile">
        {% for message in app.flashes('success') %}
        <div class="alert alert-dismissible alert-success my-4">
            <button class="close" type="button" data-dismiss="alert">×</button><strong>Super!</strong> {{message}}
        </div>
        {% endfor %}
        <div class="form-horizontal">
            {{ form_start(form) }}


            <section>
                <h3>Informations générales</h3>
                <div class="row mt-4">
                    <div class="offset-md-4 col-md-8">
                        <div class="form-group row">
                            {{ form_label(form.firstname, form.firstname, {'label_attr': {'class': 'control-label col-md-3'}})
                            }}
                            <div class="col-md-9">
                                {{form_widget(form.firstname, {'attr': {'class': 'form-control', 'placeholder': form.firstname.vars.label }})}}
                                <div class="form-control-feedback text-danger">
                                    {{form_errors(form.firstname)}}
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            {{ form_label(form.lastname, form.lastname, {'label_attr': {'class': 'control-label col-md-3'}})
                            }}
                            <div class="col-md-9">
                                {{form_widget(form.lastname, {'attr': {'class': 'form-control', 'placeholder': form.lastname.vars.label }})}}
                                <div class="form-control-feedback text-danger">
                                    {{form_errors(form.lastname)}}
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            {{ form_label(form.email, form.email, {'label_attr': {'class': 'control-label col-md-3'}})
                            }}
                            <div class="col-md-9">
                                {{form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': form.email.vars.label }})}}
                                <div class="form-control-feedback text-danger">
                                    {{form_errors(form.email)}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <hr />
            <section>
                <h3>Production</h3>
                <div class="row mt-4">
                    <div class="offset-md-4 col-md-8">
                        <div class="form-group row">
                            {{ form_label(form.job, form.job, {'label_attr': {'class': 'control-label col-md-3'}})
                            }}
                            <div class="col-md-9">
                                {{form_widget(form.job, {'attr': {'class': 'form-control' }})}}
                                <div class="form-control-feedback text-danger">
                                    {{form_errors(form.email)}}
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            {{ form_label(form.cost, form.cost, {'label_attr': {'class': 'control-label col-md-3'}})
                            }}
                            <div class="col-md-9">
                                {{form_widget(form.cost, {'attr': {'class': 'form-control', 'placeholder': "Ex: 200" }})}}
                                <div class="form-control-feedback text-danger">
                                    {{form_errors(form.cost)}}
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            {{ form_label(form.started_job,"Date d'embauche ", {'label_attr': {'class': 'control-label col-md-3'}})
                            }}
                            <div class="col-md-9">
                                {{form_widget(form.started_job, {'attr': {'class': 'form-control', 'placeholder': "jj//mm//aaaa", }})}}
                                <div class="form-control-feedback text-danger">
                                    {{form_errors(form.started_job)}}
                                </div>
                            </div>
                        </div>
                    </div>
            </section>
            <hr />
            <div class="row">
                <div class="offset-md-6 col-md-6">
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</main>


{% endblock %}