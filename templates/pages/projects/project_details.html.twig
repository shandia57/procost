{% extends 'layout/base.html.twig' %}

{% block title %} Suivi d'un projets - PROCOST {% endblock %}

{% block body %}

<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-users"></i>&nbsp;Suivi du projet {{project.name}}</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">
                <a href="#"><i class="fa fa-home fa-lg"></i></a>
            </li>
            <li class="breadcrumb-item">
                <a href={{path('employees')}}>Employés</a>
            </li>
            <li class="breadcrumb-item">Suivi du projet {{project.name}}</li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="tile">
                <table class="table table-striped table-bordered table-sm">
                    <tbody>

                        <tr>
                            <th>Projet</td>
                            <td>{{project.name}}</td>
                        </tr>
                        <tr>
                            <th>Description</td>
                            <td>{{project.description}}</td>
                        </tr>
                        <tr>
                            <th>Prix de vente</td>
                            <td>{{project.price}}</td>
                        </tr>
                        <tr>
                            <th>Date de création</td>
                            <td>{{project.createAt|date("d/m/Y", false)}}</td>
                        </tr>
                        <tr>
                            <th>Date de livraison</td>
                                {% if project.delivery != null %}
                            <td>{{project.delivery|date("d/m/Y", false)}}</td>
                            {% else %}
                            <td>En cours</td>
                            {% endif %}
                        </tr>
                        <tr>
                            <th>Nombre d'employés</td>
                            <td></td>
                        </tr>
                        <tr>
                            <th>Coût de production</td>
                            <td></td>
                        </tr>
                        <tr>
                            <th>Temps de production</td>
                            <td></td>
                        </tr>

                    </tbody>
                </table>
                <a href={{path('project_update', {'id': project.id})}} class="btn btn-info">
                    <i class="fa fa-pencil"></i>Modifier
                </a>
            </div>

            <div class="tile">
                <h3 class="title-title mb-4">Ajouter un temps</h3>
                <form class="form-horizontal">
                    <div class="form-group row">
                        <label for="select-projects" class="control-label col-md-6">Projet concerné</label>
                        <div class="col-md-6">
                            {{project.name}}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="days-count" class="control-label col-md-6">Nombre de jours</label>
                        <div class="col-md-6">
                            <input id="days-count" class="form-control" type="number" min="1">
                        </div>
                    </div>
                    <div class="row">
                        <div class="offset-md-6 col-md-8">
                            <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
        <div class="col-md-8">
            <div class="tile pb-5">
                <h3 class="tile-title">Historique des temps de production</h3>
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-sm">
                        <thead>
                            <tr>
                                <th>Prénom NOM</th>
                                <th>Temps</th>
                                <th>Date de saisie</th>
                                <th>Coût total</th>
                            </tr>
                        </thead>
                        <tbody>

                            {% for i in 0..10 %}
                            <tr>
                                <td>Shandia SAMA</td>
                                <td>4 jours</td>
                                <td>23-04-2018</td>
                                <td>1 400 €</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <hr />
                <nav class="float-right">
                    <ul class="pagination">
                        <li class="page-item disabled">
                            <span class="page-link">&laquo;</span>
                        </li>
                        <li class="page-item active" aria-current="page">
                            <span class="page-link">1<span class="sr-only">(current)</span></span>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">&raquo;</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</main>



{% endblock %}