{% extends 'layout/base.html.twig' %}

{% block title %} Suivi d'un projets - PROCOST {% endblock %}

{% block body %}

<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-users"></i>&nbsp;Suivi du projet {{project.name}}</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">
                <a href="#"><i class="fa fa-home fa-lg"></i></a>
            </li>
            <li class="breadcrumb-item">
                <a href={{path('employees')}}>Employés</a>
            </li>
            <li class="breadcrumb-item">Suivi du projet {{project.name}}</li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="tile">
                <table class="table table-striped table-bordered table-sm">
                    <tbody>

                        <tr>
                            <th>Projet</td>
                            <td>{{project.name}}</td>
                        </tr>
                        <tr>
                            <th>Description</td>
                            <td>{{project.description}}</td>
                        </tr>
                        <tr>
                            <th>Prix de vente</td>
                            <td>{{project.price}}</td>
                        </tr>
                        <tr>
                            <th>Date de création</td>
                            <td>{{project.createAt|date("d/m/Y", false)}}</td>
                        </tr>
                        <tr>
                            <th>Date de livraison</td>
                                {% if project.delivery != null %}
                            <td>{{project.delivery|date("d/m/Y", false)}}</td>
                            {% else %}
                            <td>En cours</td>
                            {% endif %}
                        </tr>
                        <tr>
                            <th>Nombre d'employés</td>

                            <td>{{numberEmployee.number}}</td>


                        </tr>
                        <tr>
                            <th>Temps de production</td>
                            <td>{{timeProduction.time}}</td>
                        </tr>
                        <tr>
                            {% for assigne in assigned %}
                            {% set totalPrice = totalPrice + (assigne.timeProduction * assigne.employee.cost) %}
                            {% endfor %}

                            <th>Coût de production</td>
                            <td>{{totalPrice}}</td>
                        </tr>

                    </tbody>
                </table>
                <a href={{path('project_update', {'id': project.id})}} class="btn btn-info">
                    <i class="fa fa-pencil"></i>Modifier
                </a>
            </div>


        </div>
        <div class="col-md-8">
            <div class="tile pb-5">
                <h3 class="tile-title">Historique des temps de production</h3>
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-sm">
                        <thead>
                            <tr>
                                <th>Prénom NOM</th>
                                <th>Temps</th>
                                <th>Date de saisie</th>
                                <th>Coût total</th>
                            </tr>
                        </thead>
                        <tbody>

                            {% for assigne in assigned %}
                            <tr>
                                <td>{{assigne.employee.firstname|capitalize}} {{assigne.employee.lastname|upper}}</td>
                                <td>{{assigne.timeProduction}}</td>
                                <td>{{assigne.publishedAt|date("d/m/Y", false) }}</td>
                                <td>{{ assigne.timeProduction * assigne.employee.cost }}€</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <hr />
                <nav class="float-right">
                    <ul class="pagination">
                        <li class="page-item disabled">
                            <span class="page-link">&laquo;</span>
                        </li>
                        <li class="page-item active" aria-current="page">
                            <span class="page-link">1<span class="sr-only">(current)</span></span>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">&raquo;</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</main>



{% endblock %}