{% extends 'layout/base.html.twig' %}

{% block title %} Edition d'un métier - PROCOST{% endblock %}

{% block body %}


<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-users"></i>&nbsp;Edition d'un métier</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">
                <a href="#"><i class="fa fa-home fa-lg"></i></a>
            </li>
            <li class="breadcrumb-item">
                <a href={{path('employees')}}>métier</a>
            </li>
            <li class="breadcrumb-item">Edition d'un métier</li>
        </ul>
    </div>
    <div class="tile">
        {% for message in app.flashes('success') %}
        <div class="alert alert-dismissible alert-success my-4">
            <button class="close" type="button" data-dismiss="alert">×</button><strong>Super!</strong> {{message}}
        </div>
        {% endfor %}
        <div class="form-horizontal">
            {{ form_start(form) }}
            <section>
                <h3>Informations générales</h3>
                <div class="row mt-4">
                    <div class="offset-md-4 col-md-8">
                        <div class="form-group row">
                            {{ form_label(form.name, form.name, {'label_attr': {'class': 'control-label col-md-3'}})
                            }}
                            <div class="col-md-9">
                                {{form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Développeur full stack'}})}}
                                <div class="form-control-feedback text-danger">
                                    {{form_errors(form.name)}}
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </section>
            <hr />
            <div class="row">
                <div class="offset-md-6 col-md-6">
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</main>


{% endblock %}