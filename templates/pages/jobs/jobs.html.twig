{% extends 'layout/base.html.twig' %}

{% block title %} Métiers - PROCOST {% endblock %}

{% block body %}

<main class="app-content">


    {{include('layout/template/_banner_name_page.html.twig', {'name_page' : "Métier"})}}


    <div class="tile pb-5">
        <a href={{path('job_create')}} class="btn btn-primary float-right mb-4"><i
                class="fa fa-plus-circle mr-2"></i>Ajouter un
            métier</a>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Métier</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for job in jobs %}
                    <tr>
                        <td>{{job.name}}</td>
                        <td>
                            <a href={{path('job_update', {'id': job.id})}} class="btn btn-info btn-sm">
                                <i class="fa fa-pencil mr-0"></i>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <hr />
        <nav class="float-right">
            {{include('layout/template/_pagination.html.twig', 
                {
                    'path' : "jobs"
                }
            )}}
        </nav>
    </div>
</main>



{% endblock %}

{% block javascript %}

{% endblock %}